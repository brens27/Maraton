<a class="links" href="/login">Home</a>
<h1 class="welcome-header">Vamos a empezar</h1>
<h2 class="deck-title"><%= @deck.name %></h2>
<form action="/results/<%=@deck.id%>" method="post">
	<% @cards.each_with_index do |q, index| %>
	<h3 class="question"><%= index + 1 %>. <%= q.question %></h3>
	<input class="input" type="text" name="user_answer[]"><br>
	<% end %>
	<br><input class="button" type="submit" name="submit" value="Contestars">
</form>

